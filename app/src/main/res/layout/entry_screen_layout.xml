<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:weightSum="1.0"
    tools:context=".EntryActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.13"/>

   <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/logo_small_with_text"
        android:layout_gravity="center"
        android:layout_weight="0.5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2">

        <TextView
            android:id="@+id/tv_sign_in_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sign_in"
            android:textSize="@dimen/text_normal_plus"
            android:textStyle="bold"
            android:background="@drawable/rounded_left_btn"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/edge_normal_plus"/>

        <TextView
            android:id="@+id/tv_sign_up_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="@string/sign_up"
            android:textSize="@dimen/text_normal_plus"
            android:background="@drawable/rounded_right_btn"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>