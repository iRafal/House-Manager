<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_tutorial_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/edge_above"
        android:paddingTop="@dimen/edge_huge_minus"
        android:paddingLeft="@dimen/edge_above"
        android:paddingRight="@dimen/edge_above"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/edge_big_large"
            android:gravity="center"
            android:paddingLeft="@dimen/edge_normal"
            android:paddingRight="@dimen/edge_normal"
            android:textColor="@color/tutorial_page_text_color"
            android:textSize="@dimen/text_normal_medium"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/iv_center_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_lets_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="1.0">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.75"
            android:src="@drawable/logo_small_with_text" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:paddingBottom="@dimen/edge_above_medium"
                android:paddingTop="@dimen/edge_above_medium"
                android:paddingLeft="@dimen/edge_most_minus"
                android:paddingRight="@dimen/edge_most_minus"
                android:gravity="center"
                android:text="@string/start"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_almost_large" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>