<resources>
    <style name="NoActionBarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/status_bar_gray</item>
        <item name="colorPrimary">@color/green_dark_plus</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorPrimary">@color/status_bar_gray</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_menu_white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
    </style>

    <style name="SignInAndUpTheme" parent="SliderActionBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_light</item>
    </style>

    <style name="DeviceScreenTheme" parent="SliderActionBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_light</item>
    </style>

    <style name="BarChartScreenTheme" parent="ActionBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_light</item>
    </style>

    <style name="LineChartScreenTheme" parent="ActionBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_light</item>
    </style>

    <style name="MeasurementStatisticScreenTheme" parent="SliderActionBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_light</item>
    </style>

    <style name="EntryScreenTheme" parent="NoActionBarTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SliderActionBarTheme" parent="ActionBarTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="VoiceControlInfoScreenTheme" parent="SliderActionBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_light</item>
    </style>

    <style name="EditProfileScreenTheme" parent="SliderActionBarTheme">
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_light</item>
    </style>

    <style name="EditText_Style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorControlNormal">@color/green_dark</item>
    </style>

    <style name="EditText_Style.White" parent="EditText_Style">
        <item name="colorControlNormal">@color/light_blue_green</item>
        <item name="android:drawableRight">@drawable/arrow_cut_right</item>
        <item name="android:textColorHint">@color/light_blue_green</item>
    </style>

    <style name="EditText_Style.Green" parent="EditText_Style">
        <item name="android:textColor">@color/green_dark_plus</item>
        <item name="android:textColorHint">@color/green_dark_plus</item>
        <item name="android:drawableRight">@drawable/arrow_green</item>
    </style>

    <style name="TextViewSettingsTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/edge_large_plus</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="floatlabelededittext">
        <item name="android:textColor">@color/light_blue_green</item>
    </style>

</resources>
